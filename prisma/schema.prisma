generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MEMBER
  DEPARTMENT_HEAD
}

enum DonationType {
  TITHE
  OFFERING
  SEED
  OTHER
}

enum DonationStatus {
  PENDING
  SUCCESS
  FAILED
}

enum Provider {
  DEFAULT
  GOOGLE
}

enum RegistrationStatus {
  CONFIRMED
  CANCELLED
  WAITLIST
}

model User {
  id                        String      @id @default(uuid())
  firstName                 String
  lastName                  String
  email                     String      @unique
  password                  String
  phone                     String?     @unique
  address                   String?
  role                      Role        @default(MEMBER)
  profileImageId            String?
  profileImage              File?       @relation(fields: [profileImageId], references: [id], onDelete: SetNull)
  provider                  Provider    @default(DEFAULT)
  emailVerified             Boolean     @default(false)
  verificationOtp           String?
  verificationOtpExpiresAt  DateTime?
  passwordResetOtp          String?
  passwordResetOtpExpiresAt DateTime?
  departmentId              String?
  department                Department? @relation(fields: [departmentId], references: [id])
  createdAt                 DateTime    @default(now())
  updatedAt                 DateTime    @updatedAt
  isActive  Boolean  @default(true)
  deletedAt DateTime?

  refreshToken      RefreshToken[]
  sermons           Sermon[]
  donations         Donation[]
  eventRegistration EventRegistration[]
  createdEvents     Event[]             @relation("EventCreator")
  prayerRequests    PrayerRequest[]
  testimonies       Testimony[]
}

model RefreshToken {
  id        String   @id() @default(uuid())
  token     String   @unique()
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  isRevoked Boolean  @default(false)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model File {
  id          String   @id() @default(uuid())
  key         String   @unique
  name        String?
  contentType String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  User             User[]
  sermonAudios     Sermon[] @relation("SermonAudio")
  sermonVideos     Sermon[] @relation("SermonVideo")
  sermonThumbnails Sermon[] @relation("SermonThumbnail")
  events           Event[]
}

model Sermon {
  id            String   @id @default(cuid())
  title         String
  description   String?
  preacher      String
  datePreached  DateTime
  scriptureText String?

  // File relations instead of direct URLs
  audioFileId String?
  audioFile   File?   @relation("SermonAudio", fields: [audioFileId], references: [id], onDelete: SetNull)

  videoFileId String?
  videoFile   File?   @relation("SermonVideo", fields: [videoFileId], references: [id], onDelete: SetNull)

  thumbnailFileId String?
  thumbnailFile   File?   @relation("SermonThumbnail", fields: [thumbnailFileId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  uploadedById String?
  uploadedBy   User?   @relation(fields: [uploadedById], references: [id], onDelete: SetNull)
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique
  members   User[]
  createdAt DateTime @default(now())
}

model Event {
  id                 String              @id @default(cuid())
  title              String
  description        String?
  tags               String[]
  startDateTime      DateTime
  endDateTime        DateTime
  location           String?
  isVirtual          Boolean             @default(false)
  virtualMeetingLink String?
  capacity           Int?
  imageFileId        String?
  imageFile          File?               @relation(fields: [imageFileId], references: [id], onDelete: SetNull)
  createdById        String
  createdBy          User                @relation("EventCreator", fields: [createdById], references: [id])
  registrations      EventRegistration[]
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
}


model EventRegistration {
  id           String             @id @default(cuid())
  eventId      String
  event        Event              @relation(fields: [eventId], references: [id], onDelete: Cascade)
  userId       String
  user         User               @relation(fields: [userId], references: [id])
  status       RegistrationStatus @default(CONFIRMED)
  registeredAt DateTime           @default(now())

  @@unique([eventId, userId]) // User can only register once per event
}

model Donation {
  id        String         @id @default(cuid())
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  amount    Float
  reference String         @unique // Paystack transaction reference
  status    DonationStatus @default(PENDING)
  type      DonationType
  note      String?
  paidAt    DateTime?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
}

model Announcement {
  id        String   @id @default(cuid())
  title     String
  message   String
  createdBy String
  createdAt DateTime @default(now())
}

model PrayerRequest {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  title      String
  content    String
  isAnswered Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Testimony {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  title      String
  content    String
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
}
